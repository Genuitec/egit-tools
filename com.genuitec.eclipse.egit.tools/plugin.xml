<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="com.genuitec.eclipse.egit.tools.internal.gps.commands.ImportProjectsHandler"
            id="com.genuitec.eclipse.egit.tools.importProjects"
            name="Import Genuitec Project Set">
         <commandParameter
               id="file"
               name="File"
               optional="true">
         </commandParameter>
      </command>
      <command
            defaultHandler="com.genuitec.eclipse.egit.tools.internal.gps.commands.ExportProjectsHandler"
            id="com.genuitec.eclipse.egit.tools.exportProjects"
            name="Export Genuitec Project Set">
      </command>
      <command
            defaultHandler="com.genuitec.eclipse.egit.tools.internal.utils.commands.TagAndPushHandler"
            id="com.genuitec.eclipse.egit.tools.tagAndPush"
            name="Create Tag and push it">
      </command>
      <!-- feature branch management -->
      <command
            defaultHandler="com.genuitec.eclipse.egit.tools.internal.fbranches.commands.CreateFeatureBranchCommand"
            id="com.genuitec.eclipse.egit.tools.newFeatureBranch"
            name="New Feature Branch...">
      </command>
      <command
            defaultHandler="com.genuitec.eclipse.egit.tools.internal.fbranches.commands.SwitchToBranchCommand"
            id="com.genuitec.eclipse.egit.tools.switchToBranch"
            name="Switch to branch">
      	<commandParameter
             id="branch.ref"
             name="Branch"
             optional="false"/>
       <commandParameter
             id="all.repos"
             name="All Repositories"
             optional="true">
       </commandParameter>
      </command>
      <command
            defaultHandler="com.genuitec.eclipse.egit.tools.internal.fbranches.commands.MergeStableIntoCurrentBranchCommand"
            id="com.genuitec.eclipse.egit.tools.mergeStableIntoCurrent"
            name="Merge stable into currect">
      	<commandParameter
             id="branch.ref"
             name="Stable Branch"
             optional="false"/>
      </command>
      <command
            defaultHandler="com.genuitec.eclipse.egit.tools.internal.fbranches.commands.DeleteFeatureBranchCommand"
            id="com.genuitec.eclipse.egit.tools.deleteFeatureBranch"
            name="Delete Feature Branch...">
      	<commandParameter
             id="branch.ref"
             name="Feature Branch"
             optional="false"/>
      </command>
      <command
      		defaultHandler="com.genuitec.eclipse.egit.tools.internal.fbranches.commands.EmptyHandler"
            id="com.genuitec.eclipse.egit.tools.switchAllBranches"
            name="Switch all repositories to feature branch...">
      </command>
      <!-- changes management -->
      <command
            defaultHandler="com.genuitec.eclipse.egit.tools.internal.changes.commands.NewChangeBranchCommand"
            id="com.genuitec.eclipse.egit.tools.newChangeBranch"
            name="New Change Branch...">
      </command>
      <command
            defaultHandler="com.genuitec.eclipse.egit.tools.internal.changes.commands.SwitchToChangeBranchCommand"
            id="com.genuitec.eclipse.egit.tools.switchToChangeBranch"
            name="Switch to change">
      	<commandParameter
             id="branch.ref"
             name="Branch"
             optional="false"/>
      </command>
      <command
            defaultHandler="com.genuitec.eclipse.egit.tools.internal.changes.commands.FetchChangeCommand"
            id="com.genuitec.eclipse.egit.tools.fetchChange"
            name="Fetch from Gerrit...">
      </command>
      <command
            defaultHandler="com.genuitec.eclipse.egit.tools.internal.changes.commands.CleanupChangesCommand"
            id="com.genuitec.eclipse.egit.tools.cleanupChanges"
            name="Cleanup...">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.egit.ui.RepositoriesView?before=repo-0">
         <menu
        		label="Switch to Stable Branch"
        		id="switch-to-stable"
           		icon="icons/branches.gif">
            <dynamic
               id="switch.branch.stable"
               class="com.genuitec.eclipse.egit.tools.internal.fbranches.commands.BranchActionsProvider"/>
            <visibleWhen checkEnabled="false">
            	<and>
	            	<count value="+"/>
	            	<iterate operator="and">
	            		<or>
	            			<instanceof value="org.eclipse.egit.ui.internal.repository.tree.RepositoryNode"/>
	            			<instanceof value="org.eclipse.egit.ui.internal.repository.tree.BranchesNode"/>
	            			<instanceof value="org.eclipse.egit.ui.internal.repository.tree.LocalNode"/>
	            		</or>
	            	</iterate>
	            </and>
            </visibleWhen>
         </menu>
         <menu
               label="Feature Branches"
               id="me-feature-branches"
               icon="icons/feature-branches.gif">
        	<command 
        			commandId="com.genuitec.eclipse.egit.tools.newFeatureBranch"
        			icon="icons/feature-branch-new.gif"/>
            <separator name="feature-0" visible="true"/>
        	<menu
        		label="Switch to Feature Branch"
        		id="switch-to"
        		icon="icons/feature-branches.gif">
	        	<dynamic
	               id="switch.branch.feature.user"
	               class="com.genuitec.eclipse.egit.tools.internal.fbranches.commands.BranchActionsProvider"/>
	            <dynamic
	               id="switch.branch.feature.others"
	               class="com.genuitec.eclipse.egit.tools.internal.fbranches.commands.BranchActionsProvider"/>
	        </menu>
            <separator name="feature-1" visible="true"/>
            <menu
                  label="Update with changes from stable"
                  id="update-with-stable"
                  icon="icons/merge-stable.gif">
            	<dynamic
                   id="merge.branch.stable"
                   class="com.genuitec.eclipse.egit.tools.internal.fbranches.commands.BranchActionsProvider"/>
            </menu>
            <menu 
            	  label="Delete Feature Branch"
            	  id="delete-feature-branch"
            	  icon="icons/feature-branch-delete.gif">
            	<dynamic
                   id="delete.branch.feature.user"
                   class="com.genuitec.eclipse.egit.tools.internal.fbranches.commands.BranchActionsProvider"/>
            	<dynamic
                   id="delete.branch.feature.others"
                   class="com.genuitec.eclipse.egit.tools.internal.fbranches.commands.BranchActionsProvider"/>
            </menu>
            <visibleWhen checkEnabled="false">
            	<and>
	            	<count value="+"/>
	            	<iterate operator="and">
	            		<or>
	            			<instanceof value="org.eclipse.egit.ui.internal.repository.tree.RepositoryNode"/>
	            			<instanceof value="org.eclipse.egit.ui.internal.repository.tree.BranchesNode"/>
	            			<instanceof value="org.eclipse.egit.ui.internal.repository.tree.LocalNode"/>
	            		</or>
	            	</iterate>
	            </and>
            </visibleWhen>
         </menu>
         <menu
               label="Change Branches"
               id="me-gerrit-changes"
               icon="icons/gerrit.gif">
         	<command
                commandId="com.genuitec.eclipse.egit.tools.newChangeBranch"
                icon="icons/gerrit-new.gif">
         	</command>
         	<command
                commandId="com.genuitec.eclipse.egit.tools.fetchChange"
                icon="icons/gerrit-fetch.gif">
         	</command>
         	<separator
                name="gerrit-changes" 
                visible="true"/>
            <menu
            	label="Switch to Change Branch"
            	id="me-gerrit-switch"
            	icon="icons/gerrit-change.gif">
	            <dynamic
	                  id="switch-to-change"
	                  class="com.genuitec.eclipse.egit.tools.internal.changes.commands.ChangesActionsProvider">
	            </dynamic>
	        </menu>
	        <separator name="gerrit-cleanup" visible="true"/>
            <command
                  commandId="com.genuitec.eclipse.egit.tools.cleanupChanges"
                  icon="icons/gerrit-cleanup.gif">
            </command>
            <visibleWhen checkEnabled="false">
            	<and>
	            	<count value="1"/>
	            	<iterate operator="and">
	            		<or>
	            			<instanceof value="org.eclipse.egit.ui.internal.repository.tree.RepositoryNode"/>
	            			<instanceof value="org.eclipse.egit.ui.internal.repository.tree.BranchesNode"/>
	            			<instanceof value="org.eclipse.egit.ui.internal.repository.tree.LocalNode"/>
	            		</or>
	            	</iterate>
	            </and>
            </visibleWhen>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.eclipse.egit.ui.RepositoriesView?after=org.eclipse.egit.ui.team.Pull">
         <command
               commandId="com.genuitec.eclipse.egit.tools.tagAndPush"
               icon="icons/tag-and-push.gif"
               style="push">
            <visibleWhen checkEnabled="false">
            	<iterate operator="and">
            		<instanceof value="org.eclipse.egit.ui.internal.repository.tree.RepositoryNode"/>
            	</iterate>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.egit.ui.RepositoriesView?after=org.eclipse.egit.ui.RepositoriesViewCreateRepository">
         <separator
               name="com.genuitec.eclipse.egit.tools.separator" visible="true">
         </separator>
         <command
               commandId="com.genuitec.eclipse.egit.tools.exportProjects"
               icon="icons/export-gps.gif"
               style="push"
               tooltip="Export projects from Genuitec Project Set (*.gps file)">
         </command>
         <command
               commandId="com.genuitec.eclipse.egit.tools.importProjects"
               icon="icons/import-gps.gif"
               style="pulldown"
               tooltip="Import projects from Genuitec Project Set (*.gps file)">
         </command>
         <!-- 
         Needs more work
         <command
               commandId="com.genuitec.eclipse.egit.tools.switchAllBranches"
               icon="icons/feature-branches.gif"
               label="Switch all repositories to feature branch..."
               style="pulldown">
         </command> -->
      </menuContribution>
      <!--
      <menuContribution
            locationURI="menu:com.genuitec.eclipse.egit.tools.switchAllBranches"
            allPopups="false">
        <dynamic
              class="com.genuitec.eclipse.egit.tools.internal.fbranches.commands.BranchActionsProvider"
              id="all.switch.branch.feature.user">
        </dynamic>
        <dynamic
              class="com.genuitec.eclipse.egit.tools.internal.fbranches.commands.BranchActionsProvider"
              id="all.switch.branch.feature.others">
        </dynamic>
      </menuContribution>
      -->
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.team.ccvs.ui.RepositoriesView">
         <separator
               name="com.genuitec.eclipse.egit.tools.separator" visible="true">
         </separator>
         <command
               commandId="com.genuitec.eclipse.egit.tools.exportProjects"
               icon="icons/export-gps.gif"
               style="push"
               tooltip="Export projects from Genuitec Project Set (*.gps file)">
         </command>
         <command
               commandId="com.genuitec.eclipse.egit.tools.importProjects"
               icon="icons/import-gps.gif"
               style="push"
               tooltip="Import projects from Genuitec Project Set (*.gps file)">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:com.genuitec.eclipse.egit.tools.importProjects">
         <dynamic
               class="com.genuitec.eclipse.egit.tools.internal.gps.commands.QuickGpsImportCommandsProvider"
               id="com.genuitec.eclipse.egit.tools.quickImportDyn">
         </dynamic>
      </menuContribution>
   </extension>

</plugin>
